                                </Grid>
                            </ListView.Footer>
                        </ListView>


                    </StackLayout>
                    <!--floating button-->
                    <Button
                        Grid.Column="1"
                        Grid.Row="1"
                        x:Name="floatingButton1" 
                        ImageSource="filter.png"
                        IsVisible="True"
                        AbsoluteLayout.LayoutFlags="PositionProportional"
                        AbsoluteLayout.LayoutBounds="1, 1, AutoSize, AutoSize"
