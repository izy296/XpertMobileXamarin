                                                       FontSize="18"
                                                       Margin="0,0,5,0"
                                                       FontAttributes="bold"
                                                       
                                                       TextColor="{DynamicResource NavigationPrimary}"/>

                                                    <Label Text="Unités"
                                                       TextColor="#0c0c0c"
                                                       FontSize="15"/>
                                                </FlexLayout>

                                                <!--Montant Facture-->
                                                <FlexLayout Grid.Row="2"
                                                        Direction="row"
                                                        HorizontalOptions="EndAndExpand"
                                                        AlignItems="End"
                                                        JustifyContent="Center"
