<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class=" XpertMobileApp.Views.Templates.RowElementTemplate_STK">
    <ContentView.Content>
        <StackLayout Spacing="10" Padding="0" BackgroundColor="Transparent">
            <Frame CornerRadius="3" Padding="5" Margin="5" BackgroundColor="Transparent" HasShadow="True"  OutlineColor="Transparent">
                <Grid  BackgroundColor="Transparent" >

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackLayout Grid.Column="0" 
                                 Grid.Row="0" 
                                 Grid.RowSpan="5" 
                                 Spacing="5" 
                                 Padding="0" 
                                 VerticalOptions="Fill" 
                                 HorizontalOptions="Fill" 
                                 BackgroundColor="{Binding Index, Converter={StaticResource oddEvenInvert}}" 
                                 HeightRequest="40">
                    </StackLayout>


                    <Label Grid.Column="1" 
                           Grid.ColumnSpan="2" 
                           Grid.RowSpan="1"  
                           Grid.Row="0" 
                           Padding="0" 
                           Text="{Binding DESIGNATION_PRODUIT}" 
                           TextColor="{StaticResource DefaultTextColor}" 
                           HorizontalOptions="StartAndExpand" 
                           FontAttributes="Bold" 
                           FontSize="Default"/>

                    <!--
                                                <StackLayout Grid.Column="2" Grid.Row="1" Spacing="5" Padding="0" Orientation="Horizontal"></StackLayout>
                                            -->
                    <Frame  Grid.Column="1" 
                            Grid.Row="1" 
                            BackgroundColor="Red" 
                            CornerRadius="10" 
                            WidthRequest="22" 
                            IsVisible="{Binding PSYCHOTHROPE}" 
                            HasShadow="True"
                            Margin="-2,0,0,0" 
                            Padding="3,2,3,2" 
                            HeightRequest="13" 
                            VerticalOptions="Center" 
                            HorizontalOptions="Start">

                        <Label  Text="PSY" 
                                TextColor="White" 
                                FontSize="Micro" 
                                HorizontalTextAlignment="Center" />

                    </Frame>

                    <!--2eme ligne--> 
                    <Label  Grid.Column="1" 
                            Grid.Row="1" 
                            Text="{ Binding LOT, StringFormat='Lot : {0:N2}'}" 
                            Margin="20,0,0,0"  
                            FontSize="Default"
                            TextColor="black"
                            HorizontalOptions="Start" />

                    <Label  Grid.Column="2" 
                            Grid.Row="1" 
                            Text="{ Binding SHP, StringFormat='SHP :{0}'}" 
                            FontSize="Default" 
                            HorizontalOptions="Start"
                            TextColor="black"/>

                    <Label  Grid.Column="3" 
                            Grid.Row="1"  
                            Text="{ Binding PPA, StringFormat='PPA : {0:N2}'}" 
                            Margin="20,0,0,0" 
                            TextColor="black" 
                            FontSize="Default" 
                            HorizontalOptions="End" />

                    
                    <!--3eme ligne--> 
                    <Label Grid.Column="1" 
                            Grid.Row="2" 
                            Text="{ Binding QUANTITE, StringFormat='Qte : {0:N2}'}" 
                            Margin="20,0,0,0" 
                            FontSize="Default" 
                            HorizontalOptions="Start" 
                           TextColor="black"/>

                    <Label  Grid.Column="2" 
                            Grid.Row="2" 
                            Text="{ Binding PRIX_VENTE, StringFormat='PV : {0:N2} DA'}"  
                            Margin="20,0,0,0" 
                            TextColor="black" 
                            FontSize="Default" 
                            HorizontalOptions="Start" />

                    <Label  Grid.Column="3" 
                            Grid.Row="2" 
                            Text="{ Binding MT_VENTE, StringFormat='MT: {0:N2} DA'}"
                            Margin="20,0,0,0" 
                            TextColor="Red"
                            FontSize="Default" 
                            HorizontalOptions="End" 
                            />

                </Grid>
            </Frame>
        </StackLayout>
    </ContentView.Content>
</ContentView>