<?xml version="1.0" encoding="utf-8" ?>
<base:XBasePage  xmlns:base="clr-namespace:XpertMobileApp.Base" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:template="clr-namespace:XpertMobileApp.Views.Templates"
             x:Class="XpertMobileApp.Views.VentesPage"
             xmlns:fontawesome="clr-namespace:FontAwesome"
             xmlns:i18n="clr-namespace:XpertMobileApp.Helpers"
             xmlns:scroll="clr-namespace:Xamarin.Forms.Extended;assembly=Xamarin.Forms.Extended.InfiniteScrolling" 
             xmlns:cmp="clr-namespace:XpertMobileApp.Components" xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             xmlns:CustomControls="clr-namespace:XpertMobileApp.CustomControls"
             Title="{Binding Title}"
             x:Name="Ventes">

    <ContentPage.ToolbarItems>
        <cmp:XToolbarItem x:Name="btn_Additem" IconImageSource="add.png" Text="{i18n:Translate cmd_Add}" IsVisible="{Binding IsAddPermited}" Clicked="AddItem_Clicked"/>
        <!--<cmp:XToolbarItem x:Name="btn_delete" Text="Supprimer" Clicked="deleteAllVente"/>-->
    </ContentPage.ToolbarItems>

    <ContentPage.Content>

        <AbsoluteLayout 
            VerticalOptions="Fill" 
            HorizontalOptions="Fill"
            Padding="0,0,0,0"
            FlowDirection="LeftToRight">

            <StackLayout 
                AbsoluteLayout.LayoutFlags="All" 
                AbsoluteLayout.LayoutBounds="0,0,1,1"
                VerticalOptions="FillAndExpand">
                <ScrollView>
                    <!-- Items listing  -->
                    <ListView x:Name="ItemsListView"
                    VerticalOptions="Fill"
                    ItemsSource="{Binding Items}"
                    HasUnevenRows="true" 
                    SeparatorVisibility="None"                            
                    RefreshCommand="{Binding LoadItemsCommand}"
                    IsPullToRefreshEnabled="true"
                    IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                    CachingStrategy="RecycleElement"
                    ItemSelected="OnItemSelected">

                        <ListView.Behaviors>
                            <scroll:InfiniteScrollBehavior IsLoadingMore="{Binding IsBusy}"/>
                        </ListView.Behaviors>

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <template:VenteTemplate />
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>

                        <ListView.Footer>
                            <Grid Padding="6" IsVisible="{Binding IsBusy}">
                                <!-- set the footer to have a zero height when invisible -->
                                <Grid.Triggers>
                                    <Trigger TargetType="Grid" Property="IsVisible" Value="False">
                                        <Setter Property="HeightRequest" Value="0" />
                                    </Trigger>
                                </Grid.Triggers>
                                <!-- the loading content -->
                                <Label Text="Loading..." VerticalOptions="Center" HorizontalOptions="Center" />
                            </Grid>
                        </ListView.Footer>

                    </ListView>
                </ScrollView>
                <!--Summaries Section-->
                <StackLayout 
                    Spacing="0"
                    AbsoluteLayout.LayoutFlags="All" 
                    AbsoluteLayout.LayoutBounds="0,0,1,1" >

                    <StackLayout
                        HeightRequest="45"
                        x:Name="ArrowUp"
                        IsVisible="true"
                        HorizontalOptions="Center"
                        Spacing="0">

                        <yummy:PancakeView 
                                BackgroundColor="#1E47BD" 
                                CornerRadius="30,30,0,0"
                                HorizontalOptions="Center"
                                WidthRequest="50"
                                HeightRequest="45">

                            <yummy:PancakeView.GestureRecognizers>
                                <TapGestureRecognizer Tapped="ShowHide_Clicked"/>
                            </yummy:PancakeView.GestureRecognizers>

                            <Image 
                                x:Name="arrow_img"
                                Source="uparrow.png"
                                WidthRequest="20"
                                HeightRequest="20"
                                VerticalOptions="Center"
                                HorizontalOptions="Center">
                            </Image>

                        </yummy:PancakeView>

                    </StackLayout>

                    <Frame
                        Margin="0"
                        x:Name="SummariesInfos" 
                        Style="{StaticResource FrameForList}" 
                        BackgroundColor="#1E47BD"
                        BorderColor="#1E47BD" 
                        IsVisible="{Binding HasAdmin}"
                        HeightRequest="30">

                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="ShowHide_Clicked"/>
                        </Frame.GestureRecognizers>


                        <Grid x:Name="gridSamuary"
                              VerticalOptions="FillAndExpand"
                              HeightRequest="250">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <ListView 
                                x:Name="SummariesListView"
                                VerticalOptions="FillAndExpand"
                                ItemsSource="{Binding Summaries}" 
                                ItemTapped="ShowHide_Clicked"
                                HasUnevenRows="true"
                                SelectionMode="None"  
                                SeparatorVisibility="None">

                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <ViewCell>
                                            <StackLayout 
                                                Spacing="0" 
                                                Padding="2,5" 
                                                Orientation="Horizontal">

                                                <Grid 
                                                    HorizontalOptions="FillAndExpand" 
                                                    VerticalOptions="Start">

                                                    <Label 
                                                        Grid.Column="0" 
                                                        Text="{Binding key}" 
                                                        TextColor="White" 
                                                        FontAttributes="Bold"/>

                                                    <Label 
                                                        Grid.Column="1" 
                                                        Text="{Binding Title, StringFormat='{0:N2}'}" 
                                                        TextColor="White" 
                                                        HorizontalOptions="EndAndExpand" 
                                                        HorizontalTextAlignment="End"/>
                                                </Grid>
                                            </StackLayout>
                                        </ViewCell>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Frame>

                </StackLayout>
            </StackLayout>
            <!--floating button-->
            <Button 
                x:Name="floatingButton" 
                ImageSource="filter.png"
                IsVisible="True"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                AbsoluteLayout.LayoutBounds="1, 0.88, AutoSize, AutoSize"
                CornerRadius="100"
                BackgroundColor="{StaticResource Primary}"
                HeightRequest="60"
                WidthRequest="60"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand"
                Padding="10"
                Margin="0,0,15,15"
                Clicked="ShowHideFilter"/>
            
        </AbsoluteLayout>

    </ContentPage.Content>

</base:XBasePage>