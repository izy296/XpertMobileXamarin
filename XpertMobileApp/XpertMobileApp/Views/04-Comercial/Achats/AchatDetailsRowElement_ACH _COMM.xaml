             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class=" XpertMobileApp.Views.Templates.AchatDetailsRowElement_ACH_COMM">
    <ContentView.Content>
        <SwipeView>
            <SwipeView.RightItems>
                <SwipeItems>
                    <SwipeItem Text="Modifier"
                               IconImageSource="SelectionEdit.png"
                               BackgroundColor="LightBlue"
                               Invoked="OnUpdateSwipeItemInvoked" />

                </SwipeItems>
            </SwipeView.RightItems>
            <Frame CornerRadius="4" Padding="15" Margin="10" BackgroundColor="White" HasShadow="True" OutlineColor="#edeceb">

                <Grid  BackgroundColor="Transparent" >

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>



                    <StackLayout 
                        Grid.Column="0" 
                        Grid.ColumnSpan="3" 
                        Grid.Row="0" 
                        Spacing="5" 
                        Padding="0">

                        <Label Text="{Binding DESIGNATION_PRODUIT}" 
                               TextColor="{StaticResource DefaultTextColor}" 
                               FontAttributes="Bold" 
                               FontSize="Default"/>

                    </StackLayout>
                    
                    <Label Grid.Column="0" 
                           Grid.Row="1" 
                           Text="{ Binding QUANTITE, StringFormat='Qte: {0:N2}'}" 
                           Margin="0,0,0,0" 
                           FontAttributes="Bold" 
                           FontSize="Default" 
                           HorizontalOptions="Start" />

                    <Label Grid.Column="1" 
                           Grid.Row="1"
                           Text="{ Binding PRIX_UNITAIRE, StringFormat='P.U: {0:N2} DA'}" 
                           FontSize="Default" 
                           HorizontalOptions="Start" />

                    <Label Grid.Column="2" 
                        Grid.Row="1" 
                        Text="{ Binding MT_HT, StringFormat='M.HT: {0:N2} DA'}" 
                        FontSize="Default" 
                        HorizontalOptions="Start" 
                        TextColor="Red"/>

