<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class=" XpertMobileApp.Views.Templates.RowElementTemplate_STK_SORTIE_COMM">
    <ContentView.Content>
        <StackLayout Spacing="10" Padding="0" BackgroundColor="Transparent">
            <Frame CornerRadius="3" Padding="5" Margin="5" BackgroundColor="Transparent" HasShadow="True"  OutlineColor="Transparent">
                <Grid  BackgroundColor="Transparent" >

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <StackLayout Grid.Column="0" 
                                 Grid.Row="0" 
                                 Grid.RowSpan="5" 
                                 Spacing="5" 
                                 Padding="0" 
                                 VerticalOptions="Fill" 
                                 HorizontalOptions="Fill" 
                                 BackgroundColor="{Binding Index, Converter={StaticResource oddEvenInvert}}" 
                                 HeightRequest="40">
                        
                    </StackLayout>


                    <Label Grid.Column="1" 
                           Grid.ColumnSpan="3" 
                           Grid.RowSpan="1"  
                           Grid.Row="0" 
                           Padding="0" 
                           Text="{Binding DESIGNATION_PRODUIT}" 
                           TextColor="{StaticResource DefaultTextColor}" 
                           HorizontalOptions="StartAndExpand" 
                           FontAttributes="Bold" 
                           FontSize="Default"/>

                    <Label Grid.Column="1" 
                           Grid.Row="1" 
                           Text="{ Binding QUANTITE, StringFormat='Quantité : {0:N2}'}" 
                           Margin="20,0,0,0" 
                           FontAttributes="Bold" 
                           FontSize="Default" 
                           HorizontalOptions="StartAndExpand" />
                    
                    <Label Grid.Column="1" 
                           Grid.Row="2"  
                           Text="{ Binding LOT, StringFormat='Lot : {0:N2}'}" 
                           Margin="20,0,0,0" 
                           FontAttributes="Bold"  
                           FontSize="Default" 
                           HorizontalOptions="StartAndExpand"/>


                    <Label Grid.Column="2" 
                           Grid.Row="1"  
                           Text="{ Binding MT_ACHAT, StringFormat='P.Achat : {0:N2}'}" 
                           Margin="20,0,0,0" 
                           FontAttributes="Bold" 
                           FontSize="Default" 
                           HorizontalOptions="StartAndExpand" />
                    
                    <Label Grid.Column="2" 
                           Grid.Row="2" 
                           Text="{ Binding PRIX_VENTE, StringFormat='P.Unit : {0:N2}'}" 
                           Margin="20,0,0,0" 
                           FontAttributes="Bold" 
                           FontSize="Default" 
                           HorizontalOptions="StartAndExpand" />

                    <Label Grid.Column="1" 
                           Grid.Row="3" 
                           Text="{ Binding TAUX_TVA, StringFormat='TVA : {0:N2} DA'}"  
                           Margin="20,0,0,0" 
                           FontAttributes="Bold" 
                           FontSize="Default" 
                           HorizontalOptions="StartAndExpand" />
                    
                    <Label Grid.Column="2" 
                           Grid.Row="3" 
                           Grid.ColumnSpan="2" 
                           Text="{ Binding TARIF, StringFormat='Tarif : {0:N2} DA'}"  
                           Margin="20,0,0,0" 
                           FontAttributes="Bold" 
                           FontSize="Default" 
                           HorizontalOptions="StartAndExpand" />

                    <Label Grid.Column="1" 
                           Grid.Row="4" 
                           Grid.ColumnSpan="2"  
                           Text="{ Binding DATE_PEREMPTION, StringFormat=' Date De Péremption :{0:dd/MM/yyyy}'}" 
                           Margin="20,0,0,0" 
                           FontSize="Micro" 
                           FontAttributes="Bold" 
                           HorizontalOptions="CenterAndExpand" />
                </Grid>
            </Frame>
        </StackLayout>
    </ContentView.Content>
</ContentView>